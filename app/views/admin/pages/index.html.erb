<% title "Page" %>

<% if Page.all.blank? -%>
<div>Please add a <%= link_to "new page", new_admin_page_path %></div>

<% else -%>
<table class="view_all">
  <tr>
    <th>Name</th>
  </tr>
  <% for page in @pages %>
    <tr id="page_<%= page.id %>">
      <td><%=h page.name %></td>
      <td class='actions'>
        <%= link_to "View details", [:admin, page] %> |
        <%= link_to "Edit", edit_admin_page_path(page) %> |
        <%= link_to "Delete", [:admin, page], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Add a new page", new_admin_page_path %>
</p>
<% end -%>
